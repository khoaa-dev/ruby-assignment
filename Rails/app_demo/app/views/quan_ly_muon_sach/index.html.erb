<% content_for :body do%>
<div class="container">
  <div class="row">
    <div class="col-4 text-center mb-4" style="color: green">
      <h5>THƯ VIỆN</h5>
      <h5>TRƯỜNG TIỂU HỌC PHONG THẠNH TÂY A</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h2 class="text-uppercase align-items-center d-flex justify-content-center" style="color: red">
        <%= link_to image_tag("logo.png", alt: "Logo", style:"width: 35px; height: 35px"), 'http://rubyonrails.org/', style: "margin-right: 20px" %>
        Quản lý cho học sinh mượn sách
      </h2>

    </div>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Họ và tên</th>
          <th scope="col">Lớp</th>
          <th scope="col">Mã sách</th>
          <th scope="col">Tên sách</th>
          <th scope="col">Tên tác giả</th>
          <th scope="col">Tủ sách</th>
          <th scope="col">Số BM</th>
          <th scope="col">Ngày mượn</th>
          <th scope="col">Ngày trả</th>
          <th scope="col">Số ngày</th>
          <th scope="col">Ghi chú</th>
        </tr>
      </thead>
      <tbody>
        <% @quanLyMuonSachs.each do |quanLyMuonSach| %>
          <tr>
            <th scope="row"><%= quanLyMuonSach.id %></th>
            <td><p><%= quanLyMuonSach.maHS %></p></td>
            <td><p><%= quanLyMuonSach.lop %></p></td>
            <td><p><%= quanLyMuonSach.maSach %></p></td>
            <td><p><%= quanLyMuonSach.tenSach %></p></td>
            <td><p><%= quanLyMuonSach.tenTacGia %></p></td>
            <td><p><%= quanLyMuonSach.tuSach %></p></td>
            <td><p><%= quanLyMuonSach.soBM %></p></td>
            <td><p><%= quanLyMuonSach.ngayMuon %></p></td>
            <td><p><%= quanLyMuonSach.ngayTra %></p></td>
            <td><p><%= quanLyMuonSach.soNgay %></p></td>
            <td><p><%= quanLyMuonSach.ghiChu %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>